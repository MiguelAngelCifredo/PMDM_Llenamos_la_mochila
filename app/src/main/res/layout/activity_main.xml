<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="30dp"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Contenido:" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="24dp"
        android:layout_marginStart="24dp"
        android:orientation="vertical">

        <CheckBox
            android:id="@+id/chkContenido1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Gorras" />

        <CheckBox
            android:id="@+id/chkContenido2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="BaÃ±adores" />

        <CheckBox
            android:id="@+id/chkContenido3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Camisetas" />

        <CheckBox
            android:id="@+id/chkContenido4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Zapatos" />

        <CheckBox
            android:id="@+id/chkContenido5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pantalones" />

        <CheckBox
            android:id="@+id/chkContenido6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Libros" />

        <TextView
            android:id="@+id/txtPeso"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:fontFamily="casual"
            android:textSize="34sp"
            android:textStyle="bold" />
    </LinearLayout>

    <Button
        android:id="@+id/btnVaciar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#3F51B5"
        android:text="VACIAR MOCHILA" />

</LinearLayout>